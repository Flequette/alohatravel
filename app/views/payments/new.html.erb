<%= render 'shared/navbar' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1>Payment de <%= @order.booking_sku %></h1>
      <%= form_tag order_payments_path(@order) do %>
        <article>
          <label class="amount">
            <span>Montant: <%= humanized_money_with_symbol(@order.amount) %></span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-name="Ma Reservation"
          data-email="<%= current_user.email %>"
          data-description="Reservation <%= @order.booking_sku %>"
          data-amount="<%= @order.amount_cents %>"
          data-currency="<%= @order.amount.currency %>"></script>
      <% end %>

    </div>
  </div>
</div>
