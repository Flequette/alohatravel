  <div class="experience-title">
    <h4>Ils parlent de nous</h4>
  </div>
  <div class="row text-center">
    <div class="review-icon">
      <%=image_tag 'flaticon/whatsup.png', height:30 %>
      <%=image_tag 'flaticon/whatsup.png', height:30 %>
      <%=image_tag 'flaticon/whatsup.png', height:30 %>
    </div>

  </div>
  <div class="row text-center">
