<!-- Banner bloc -->
<%= render "shared/banner" %>

<!-- Product value bloc -->
<div class="value text-center">
  <div class="row text-center">
    <div class="value-card">
      <div class="col-xs-12 col-sm-6 col-md-4 ">
        <div class="value-icon">
          <%=image_tag 'flaticon/night-camping.png', width:100, height:100  %>
        </div>
        <h4>Vivez comme un local</h4>
        <p>Laissez-vous guider par le savoir et les bons plans de votre PeetaGuide</p>
      </div>
    </div>

    <div class="value-card">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="value-icon">
          <%=image_tag 'flaticon/worldwide.png', width:100, height:100  %>
        </div>
        <h4>Appartenez à une communauté</h4>
        <p>Profitez de cette grande communauté de Peetayers et partagez des moments uniques</p>
      </div>
    </div>

    <div class="value-card">
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="value-icon">
          <%=image_tag 'flaticon/wallet.png', width:100, height:100  %>
        </div>
        <h4>Economisez autrement</h4>
        <p>Gagnez du temps grâce à votre PeetaGuide qui vous fera découvrir tous les plans authentiques de sa ville</p>
      </div>
    </div>
  </div>
</div>

<!-- Instagram bloc -->
<%= render "shared/cards_instagram" %>

<!-- Experience bloc -->
<div class="experience text-center">
  <div class="experience-title">
    <h4>Comment ça marche?</h4>
  </div>

  <div class="row">
    <div class="experience-card text-right">
      <div class="col-xs-12 col-sm-5 col-md-6">
        <div class="experience-nb ">
          <h1>1</h1>
        </div>
        <div class="experience-content">
          <h4>Je cherche</h4>
          <p>Mon PeetaGuide en moins de 1 minute</p>
        </div>
      </div>
    </div>

    <div class="experience-card text-left">
      <div class="col-xs-12 col-sm-5 col-md-6 offset-md-3">
        <div class="experience-icon">
          <%=image_tag 'experience/1.Profilebis.png', width:250 %>
        </div>
      </div>
    </div>
  </div>

  <div class="row text-left">
    <div class="experience-card">
      <div class="col-xs-12 col-sm-5 col-md-6 offset-md-3">
        <div class="experience-icon2 text-right">
          <%=image_tag 'experience/2.Plansbis.png', width:250  %>
        </div>
      </div>
    </div>

    <div class="experience-card">
      <div class="col-xs-12 col-sm-5 col-md-6 ">
        <div class="experience-nb ">
          <h1>2</h1>
        </div>
        <div class="experience-content">
          <h4>Je choisis</h4>
          <p>Le PeetaGuide de mon choix grâce au matching avec les tours qui me correspondent</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="experience-card text-right">
      <div class="col-xs-12 col-sm-5 col-md-6 ">
        <div class="experience-nb">
          <h1>3</h1>
        </div>
        <div class="experience-content">
          <h4>Je paye</h4>
          <p>Directement via le site en quelques clics seulement.</p>
        </div>
      </div>
    </div>
    <div class="experience-card text-left">
      <div class="col-xs-12 col-sm-5 col-md-6 offset-md-3">
        <div class="experience-icon">
          <%=image_tag 'experience/3.Bookingbis.png', width:250 %>
        </div>
      </div>
    </div>
  </div>

</div>

<!-- Joinus bloc -->
<%= render "shared/joinus" %>

