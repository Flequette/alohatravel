<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4 col-sm-offset-4">
      <%= simple_form_for @profile do |f| %>
        <%= f.input :first_name, class: "form-control" %>
        <%= f.input :last_name, class: "form-control" %>
        <%= f.input :age, class: "form-control" %>
        <%= f.input :phone_number, class: "form-control" %>
        <%= f.input :description, class: "form-control" %>
        <%= f.input :language, class: "form-control" %>
        <%= f.input :city, class: "form-control", :input_html =>{:id => 'address'} %>
        <%= f.input :country, class: "form-control" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>

        <%= f.submit "Valider", class: "btn-peetaya" %>
      <% end %>
    </div>
  </div>
</div>
