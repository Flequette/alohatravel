<div class="container">
  <div class="row align-items-center">
    <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4">
      <%= simple_form_for @profile do |f| %>
        <%= f.input :first_name, class: "form-control" %>
        <%= f.input :last_name, class: "form-control" %>
        <%= f.input :age, class: "form-control" %>
        <%= f.input :location, class: "form-control" %>
        <%= f.input :phone_number, class: "form-control" %>
        <%= f.input :description, class: "form-control" %>

        <%= f.submit 'OK' %>
      <% end %>
    </div>
  </div>
</div>
