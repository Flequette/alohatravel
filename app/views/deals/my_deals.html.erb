                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

  <script>
  function myFunction() {
    var x = document.getElementById('tours');
    var y = document.getElementById('reservation');
    if (x.style.display === 'none') {
      x.style.display = 'block';
      y.style.display = 'none';
    }
  }
  </script>

