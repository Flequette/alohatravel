<div class="container">
  <div class="row align-items-center">
    <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4">
      <%= simple_form_for @deal do |f| %>
        <%= f.input :name, class: "form-control" %>
        <%= f.input :description, class: "form-control" %>
        <%= f.input :location, class: "form-control" %>
        <%= f.input :price, class: "form-control" %>
        <%= f.input :photo, class: "form-control" %>

        <%= f.submit 'Add a deal' %>
      <% end %>
    </div>
  </div>
</div>
