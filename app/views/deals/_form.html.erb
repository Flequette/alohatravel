 <div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4 col-sm-offset-4">
      <%= simple_form_for @deal do |f| %>
        <div class="form">
          <p><%= f.input :name, class: "form-control" %></p>
          <p><%= f.input :description, class: "form-control" %></p>
          <p><%= f.input :address, class: "form-control" %></p>
          <p><%= f.input :city, class: "form-control" %></p>
          <p><%= f.input :zip_code, class: "form-control" %></p>
          <p><%= f.input :inhabitant, class: "form-control" %></p>
          <p><%= f.input :activity_type, class: "form-control" %></p>
          <p><%= f.input :time, class: "form-control" %></p>
          <p><%= f.input :price, class: "form-control" %></p>
          <p><%= f.input :photo %></p>
          <p><%= f.input :photo_cache, as: :hidden %></p>
        </div>

          <%= f.submit "Ajouter", class: "btn-aloha" %>
      <% end %>
    </div>
  </div>
</div>
