<div class="container">
  <div class="row align-items-center">
    <div class="col-xs-12 col-sm-4 col-md-4 col-md-offset-4">
      <%= simple_form_for @deal do |f| %>
        <div class="form">
          <p><%= f.input :name, class: "form-control" %></p>
          </div>
          <p><%= f.input :description, class: "form-control" %></p>
          <p><%= f.input :location, class: "form-control" %></p>
          <p><%= f.input :price, class: "form-control" %></p>
          <p><%= f.input :photo %></p>
          <p><%= f.input :photo_cache, as: :hidden %></p>

          <%= f.submit "Ajouter" %>
      <% end %>
    </div>
  </div>
</div>
