<div class="showdeal-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%=image_path "banner.jpg" %>');">
  <div class="showdeal-back">
    <%= link_to deals_path do %>
      <i class="fa fa-arrow-left"></i> Retour aux expériences
    <% end %>
  </div>
  <div class="showdeal-content text-center">
    <% if @deal.profile == current_user.profile %>
      <h3><%= @deal.name %> <%= link_to "| Edit", edit_deal_path(@deal) %> <%= link_to "| Delete", deal_path(@deal), method: :delete %></h3> 
    <% else %>
      <h3><%= @deal.name %></h3>
    <% end %>
  </div>
</div>


<!-- Resume bloc -->
<div class="resume">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-2">
      <div class="resume-avatar text-center">
        <div class="row">
          <% if @deal.profile.photo.present? %>
            <%= cl_image_tag @deal.profile.photo, class: "resume-card-user" %>
          <% else %>
              <img class="resume-card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
          <% end %>
        </div>
        <div class="row">
          <div class="resume-content">
            <p><%= @deal.profile.first_name %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-8 col-md-6">
      <div class="resume-infos">
        <div class="row">
          <div class="resume-content text-left">
              <%=image_tag 'flaticon/geoloc2.png', width:20, height:20  %>
              <strong><%= @deal.city %>, <%= @deal.country %></strong>
          </div>
        </div>

        <div class="row">
          <div class="resume-icon text-center">
            <div class="col-xs-4 col-sm-3 col-md-2">
              <%=image_tag 'activity_type/nature.png', width:40, height:40  %>
              <p><%= @deal.activity_type %></p>
            </div>
          </div>

          <div class="resume-icon text-center">
            <div class="col-xs-4 col-sm-3 col-md-2">
              <%=image_tag 'activity_type/time.png', width:40, height:40  %>
              <p><%= @deal.time %></p>
            </div>
          </div>

          <div class="resume-icon text-center">
            <div class="col-xs-4 col-sm-3 col-md-2">
              <%=image_tag 'activity_type/money.png', width:40, height:40  %>
              <p><%= @deal.price %>€/pers</p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<!-- Description bloc -->
<div class="description">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-1">
      <div class="desc-title">
        <h5>Description</h5>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-8">
      <div class="desc-content">
        <p><%= @deal.description %></p>
      </div>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-1">
      <div class="desc-title">
        <h5>Activité</h5>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-8">
      <div class="desc-content">
        <p><%= @deal.activity_type %></p>
      </div>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-1">
      <div class="desc-title">
        <h5>Tips</h5>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-8">
      <div class="desc-content">
        <p>N'oublie pas de prendre de l'eau</p>
      </div>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-1">
      <div class="desc-title">
        <h5>Le prix inclut</h5>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-8">
      <div class="desc-content">
        <ul class="list_ok">
          <li>Les repas</li>
          <li>Les 2 nuits</li>
        </ul>
      </div>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-1">
      <div class="desc-title">
        <h5>Ville</h5>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-8">
      <div class="desc-content">
        <p><%= @deal.city %>, <%= @deal.country %></p>
      </div>
    </div>
  </div>
  <hr>

  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-2 col-md-offset-1">
      <div class="desc-title">
        <h5>Prix</h5>
      </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-8">
      <div class="desc-content">
        <p><%= @deal.price %>€/jour</p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-lg-6 col-lg-offset-4">
      <div class="desc-card">
        <div class="desc-card-photo text-center">
          <%= cl_image_tag @deal.photo, height: 350, width: 400, crop: :fill %>
        </div>
        <div class="desc-card-description text-center">
          <h2>#alohatravel #<%= @deal.city %> #<%= @deal.country %> #<%= @deal.activity_type %> </h2>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Joinus bloc -->
<%= render "shared/joinus" %>
