<%= render 'shared/navbar' %>

<div class="showdeal-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.4) 0%, rgba(0,36,61,0.4) 50%), url('<%=image_path "banner.jpg" %>');">
  <div class="showdeal-back">
    <%= link_to deals_path do %>
      <i class="fa fa-arrow-left"></i> Retour aux expériences
    <% end %>
  </div>
  <div class="showdeal-content text-center">
    <% if @deal.profile == current_user.profile %>
      <p><%= link_to "Modifier", edit_deal_path(@deal) %> | <%= link_to "Suprimer", deal_path(@deal), method: :delete %> | <%= link_to "Modifier les disponibilités", deal_bookings_path(@deal) %></p>
      <h3><%= @deal.name.capitalize %></h3>
    <% else %>
      <h3><%= @deal.name.capitalize %></h3>
    <% end %>
  </div>
</div>

<div class="content">
  <div class="row">
    <!-- Resume bloc -->
    <div class="col-xs-12 col-sm-12 col-md-8 ">
      <!-- Sous bloc Resume-->
      <div class="row">
        <div class="col-xs-12 col-sm- col-md-2 col-md-offset-2">
          <div class="resume-avatar text-center">
            <div class="row">
              <% if @deal.profile.photo.present? %>
                <%= cl_image_tag @deal.profile.photo, class: "resume-card-user" %>
              <% else %>
                  <img class="resume-card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
              <% end %>
            </div>
            <div class="row">
              <div class="resume-content">
                <p><%= @deal.profile.first_name.capitalize %></p>
                <p><%= @deal.profile.age %>ans</p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-8 col-md-6">
          <div class="resume-infos">
            <div class="row">
              <div class="resume-content text-left">
                  <%=image_tag 'flaticon/geoloc2.png', width:20, height:20  %>
                  <strong><%= @deal.city.capitalize %>, <%= @deal.country.capitalize %></strong>
              </div>
            </div>
            <div class="row">
              <div class="resume-icon text-center">
                <div class="col-xs-4 col-sm-3 col-md-3">
                  <%=image_tag 'activity_type/nature.png', width:40, height:40  %>
                  <p><%= @deal.activity_type.capitalize %></p>
                </div>
              </div>
              <div class="resume-icon text-center">
                <div class="col-xs-4 col-sm-3 col-md-3">
                  <%=image_tag 'activity_type/time.png', width:40, height:40  %>
                  <p><%= @deal.time %></p>
                </div>
              </div>
              <div class="resume-icon text-center">
                <div class="col-xs-4 col-sm-3 col-md-3">
                  <%=image_tag 'flaticon/bank.png', width:40, height:40  %>
                  <p><%= @deal.price %>€</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sous bloc Description -->
      <div class="row">
        <div class="description">
          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left ">
                <h5>Description</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.description %></p>
              </div>
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Activité</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.activity_type %></p>
              </div>
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Ville</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.city %>, <%= @deal.country %></p>
              </div>
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Langues disponibles</h5>
              </div>
            </div>

            <% if @dela.language.present? %>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.language %></p>
              </div>
            </div>
            <% end %>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Prix</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.price %></p>
              </div>
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Le prix inclut</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.price_include %></p>
              </div>
            </div>
          </div>
          <hr>


          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Le prix n'inclut pas</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.price_not_include %></p>
              </div>
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Conseils</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.tips%></p>
              </div>
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Point de rencontre</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.meet_point %></p>
              </div>
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Mode de transport</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.transport %></p>
              </div>
            </div>
          </div>
          <hr>

          <div class="row">
            <div class="col-xs-12 col-sm-4 col-md-4">
              <div class="desc-title text-left">
                <h5>Nombre de participant max.</h5>
              </div>
            </div>
            <div class="col-xs-12 col-sm-8 col-md-8">
              <div class="desc-content">
                <p><%= @deal.nb_people %></p>
              </div>
            </div>
          </div>
          <hr>

        </div>
      </div>
    </div>
    <!-- Fin Resume bloc -->

    <!-- Réservation bloc -->
    <div class="col-xs-12 col-sm-12 col-md-4">
      <div class="booking-box">
        <h4>Réservez maintenant</h4>
        <p>Pour réserver dès maintenant, envoyez nous un mail en cliquant <a href="mailto:contact@peetaya.com" title="contact@peetaya.com"><strong>ICI</strong></a></p>
        <h4>Prix :</h4>
        <p><strong>30€</strong> de frais de réservation</p>
        <p><em>(à payer lors de la confirmation de réservation)</em></p>
        <br>
        <p><strong><%= @deal.price %>€</strong></p>
        <p><em>(à payer directement au guide)</em></p>
        <br>

         <!-- <%= simple_form_for @booking,  url: deal_bookings_path(@deal.id) do |f| %>
            <div class="form">
              <p><%= f.input :start_date, order: [:day, :month, :year], class: "form-control" %></p>
              <p><%= f.input :nb_people, class: "form-control" %></p>
              <p><%= f.input :message, class: "form-control" %></p>
              <%= f.submit "Réserver", class: "btn-peetaya2" %>
            </div>
          <% end %>-->
      </div>
    </div>
    <!-- Fin Réservation bloc -->

  </div>
</div>
