<div class="carousel">
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active" style="color: #50E3C2;"></li>
      <li data-target="#myCarousel" data-slide-to="1" style="color: #50E3C2;"></li>
      <li data-target="#myCarousel" data-slide-to="2" style="color: #50E3C2;"></li>
      <li data-target="#myCarousel" data-slide-to="3" style="color: #50E3C2;"></li>
      <li data-target="#myCarousel" data-slide-to="4" style="color: #50E3C2;"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <div class="carousel-screen">
          <div class="col-xs-12 col-sm-6 col-md-6">
          <%= image_tag 'experience/1.Profilebis.png', width:300, alt: "First slide" %>
          </div>
        </div>
        <div class="carousel-caption">
          <div class="col-xs-12 col-sm-6 col-md-6">
             <h3>1. Je cherche</h3>
             <p>Mon PeetaGuide en moins de 1 minute</p>
          </div>
        </div>
      </div>

      <div class="item">
        <div class="carousel-screen">
          <div class="col-xs-12 col-sm-6 col-md-6">
          <%= image_tag 'experience/1.Profilebis.png', width:300, alt: "First slide" %>
          </div>
        </div>
        <div class="carousel-caption">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <h3>2. Je match</h3>
            <p>Avec le top 5 des tours proposés par les PeetaGuide et qui me correspondent</p>
          </div>
        </div>
      </div>

      <div class="item">
        <div class="carousel-screen">
          <div class="col-xs-12 col-sm-6 col-md-6">
          <%= image_tag 'experience/1.Profilebis.png', width:300, alt: "First slide" %>
          </div>
        </div>
        <div class="carousel-caption">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <h3>3. Je choisis</h3>
            <p>Le PeeGuide de mon choix</p>
          </div>
        </div>
      </div>

      <div class="item">
        <div class="carousel-screen">
          <div class="col-xs-12 col-sm-6 col-md-6">
          <%= image_tag 'experience/1.Profilebis.png', width:300, alt: "First slide" %>
          </div>
        </div>
        <div class="carousel-caption">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <h3>4. Je règle</h3>
            <p>Le paiement directement via le site</p>
          </div>
        </div>
      </div>

      <div class="item">
        <div class="carousel-screen">
          <div class="col-xs-12 col-sm-6 col-md-6">
          <%= image_tag 'experience/1.Profilebis.png', width:300, alt: "First slide" %>
          </div>
        </div>
        <div class="carousel-caption">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <h3>5. Je note</h3>
            <p>L'expérience avec mon PeetaGuide</p>
          </div>
        </div>
      </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<script type="text/javascript">
$('.carousel').carousel({
interval: 3000,
pause: false
})
</script>
