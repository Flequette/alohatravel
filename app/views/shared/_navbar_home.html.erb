<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo/color.png" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= link_to "Proposer une expérience", new_deal_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Tout voir", deals_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "PeetaGuide", my_deals_path(current_user.profile), class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
        <% if current_user.profile.present? %>
          <% if current_user.profile.photo.present? %>
            <%= cl_image_tag current_user.profile.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>
        <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
            <% if current_user.profile.present? %>
              <%= link_to profile_path(current_user.profile) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            <% end %>
            </li>
            <li>
              <%= link_to my_deals_path(current_user.profile) do %>
                <i class="fa fa-cog"></i>  <%= t(".peetaGuide", default: "PeetaGuide") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <%= link_to "Être Peetayers", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Devenir PeetaGuide", landing_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <!-- Login link (when logged out) %>-->
      <%= link_to t(".sign_in", default: "S'inscrire / Se connecter"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link"
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Être Peetayers", root_path %></li>
        <li><%= link_to "Devenir PeetaGuide", landing_path %></li>
      </ul>
    </div>
  </div>

</div>
