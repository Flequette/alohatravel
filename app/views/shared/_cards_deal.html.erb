<div class="container">
  <div class="row">
    <% @deals.each do |deal| %>
      <div class="col-xs-12 col-sm-6 col-md-4 ">
        <%= link_to deal_path(deal) do %>
          <div class="deal-card">
            <div class="deal-card-photo text-center">
              <%= cl_image_tag deal.photo, height: 250, width: 350, crop: :fill %>
            </div>
            <div class="deal-card-content">
              <div class="deal-card-title">
                <p><%= deal.city %>, <%= deal.country%> | <%= deal.price%> â‚¬</p>
              </div>
              <div class="deal-card-name">
                <p><%= deal.name %></p>
              </div>
              <% if deal.profile.photo.present? %>
                <%= cl_image_tag deal.profile.photo, class: "deal-card-user" %>
              <% else %>
                <img class="deal-card-user" src="https://kitt.lewagon.com/placeholder/users/tgenaitay">
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
