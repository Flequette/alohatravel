<div class= "container" style="min-height: 80vh;">
  <div id="hero-wrapper">
   <div class="carousel-wrapper">
     <div id="hero-carousel" class="carousel slide carousel-fade">
       <ol class="carousel-indicators">
         <li data-target="#hero-carousel" data-slide-to="0"></li>
         <li data-target="#hero-carousel" data-slide-to="1"></li>
         <li data-target="#hero-carousel" data-slide-to="2"></li>
         <li data-target="#hero-carousel" data-slide-to="3"></li>
         <li data-target="#hero-carousel" data-slide-to="4"></li>
       </ol>
       <div class="carousel-inner">
         <div class="item active image1">
           <div class="carousel-caption d-none d-md-block">
             <h5>1. Je cherche</h5>
             <p>Mon PeetaGuide en moins de 1 minute</p>
           </div>
           <%= image_tag 'experience/1.Profilebis.png', width:350, class: "d-block w-100", alt: "First slide" %>
         </div>
         <div class="item image2">
           <%= image_tag 'experience/1.Profilebis.png', width:350, class: "d-block w-100", alt: "First slide" %>
           <div class="carousel-caption d-none d-md-block">
             <h5>2. Je match</h5>
             <p>Avec le top 5 des tours proposés par les PeetaGuide et qui me correspondent</p>
           </div>
         </div>
         <div class="item image3">
           <%= image_tag 'experience/1.Profilebis.png', width:350, class: "d-block w-100", alt: "First slide" %>
           <div class="carousel-caption d-none d-md-block">
             <h5>3. Je choisis</h5>
             <p>Le PeeGuide de mon choix</p>
           </div>
         </div>
         <div class="item image4">
           <%= image_tag 'experience/1.Profilebis.png', width:350, class: "d-block w-100", alt: "First slide" %>
           <div class="carousel-caption d-none d-md-block">
             <h5>4. Je règle</h5>
             <p>Le paiement directement via le site</p>
           </div>
         </div>
         <div class="item image5">
           <%= image_tag 'experience/1.Profilebis.png', width:350, class: "d-block w-100", alt: "First slide" %>
           <div class="carousel-caption d-none d-md-block">
             <h5>5. Je note</h5>
             <p>L'expérience avec mon PeetaGuide</p>
           </div>
         </div>
       </div>
       <a class="left carousel-control" href="#hero-carousel" data-slide="prev">
         <i class="fa fa-chevron-left left"></i>
       </a>
       <a class="right carousel-control" href="#hero-carousel" data-slide="next">
         <i class="fa fa-chevron-right right"></i>
       </a>
     </div>
   </div>
  </div>
</div>

<script type="text/javascript">
$('.carousel').carousel({
interval: 3000,
pause: false
})
</script>
